<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBEEF3">

    <Button
        android:id="@+id/pushPress"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:text="push press"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/strictPress"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/strictPress"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:text="strict press"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/clean"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/deadlift"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="deadlift"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/frontSquat"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/frontSquat"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="front squat"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/backSquat"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/backSquat"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="back squat"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/clean"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:text="clean"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:text="Wybierz Ä‡wiczenie"
        android:textColor="#A13157"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/pushPress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>